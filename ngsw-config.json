{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "cache-first",
      "urls": [
        "https://fonts.gstatic.com",
        "https://--jsonplaceholder.typicode.com/posts"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "1d",
        "maxSize": 100
      }
    },
    {
      "name": "network-first",
      "urls": [
        "https://jsonplaceholder.typicode.com/posts"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "timeout":"3s",
        "maxAge": "1m",
        "maxSize": 100
      }
    }
  ]
}
